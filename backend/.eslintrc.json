{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "./node_modules/gts"
    ],
    "ignorePatterns": [
        "build/**/*"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 130
            }
        ],
        "node/no-unpublished-import": [
            "error",
            {
                "allowModules": [
                    "chai",
                    "supertest",
                    "chai-as-promised",
                    "sinon"
                ]
            }
        ]
    }
}